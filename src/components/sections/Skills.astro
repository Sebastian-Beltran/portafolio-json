---
import Section from "../Section.astro";

import { skills } from "@cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name, icon }) =>
        icon == null ? (
          <li>
            <span>{name}</span>
          </li>
        ) : (
          <img src={icon} />
        )
      )
    }
  </ul>
</Section>
<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
